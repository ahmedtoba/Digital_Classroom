@model RegisterViewModel
@{
    Layout = "_AccountLayout";
}

<div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block" id="registerImage"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            @if (TempData["Error"] != null)
                                {
                                    <div class="alert alert-danger">
                                        <span><b>Sorry - </b>@TempData["Error"]</span>
                                    </div>
                                }
                            <form class="user" asp-action="Register" asp-controller="Account">
                                <div class="form-group">
                                    <input asp-for="FullName" class="form-control form-control-user" id="exampleFirstName"
                                        placeholder="Full Name">
                                    <span asp-validation-for="FullName" class="text-danger help-block" ></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="UserName" class="form-control form-control-user" id="exampleFirstName"
                                        placeholder="User Name">
                                    <span asp-validation-for="UserName" class="text-danger help-block" ></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-user" id="exampleInputEmail"
                                        placeholder="Email Address">
                                    <span asp-validation-for="Email" class="text-danger help-block" ></span>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Password" class="form-control form-control-user"
                                            id="exampleInputPassword" placeholder="Password">
                                        <span asp-validation-for="Password" class="text-danger help-block" ></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="ConfirmPassword" class="form-control form-control-user"
                                            id="exampleRepeatPassword" placeholder="Repeat Password">
                                        <span asp-validation-for="Password" class="text-danger help-block" ></span>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Register Account
                                </button>
                                <hr>
                                <div class="radio-wrapper">
                                 <input type="radio" asp-for="Role" value="Student" id="option-1" checked>
                                 <input type="radio" asp-for="Role" value="Teacher" id="option-2">
                                   <label for="option-1" class="option option-1" id="stud">
                                     <div class="dot"></div>
                                      <span>Student</span>
                                      </label>
                                   <label for="option-2" class="option option-2" id="teach">
                                     <div class="dot"></div>
                                      <span>Teacher</span>
                                   </label>
                                </div>
                            </form>
                            <hr>
                            
                            <div class="text-center">
                                <a class="small" asp-action="Login" asp-controller="Account">Already have an account? Login!</a>
                            </div>
                            <div class="text-center"></div>
                                <a class="small" asp-action="index" asp-controller="home">Back to Home Page</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    let img = registerImage
    window.onload = function(){
       img.classList.add('bg-register-image-student')
    }

    stud.onclick = function(){
        img.classList.add('bg-register-image-student')
        img.classList.remove('bg-register-image-teacher')
    }
    teach.onclick = function(){
        img.classList.add('bg-register-image-teacher')
        img.classList.remove('bg-register-image-student')
    }

</script>

