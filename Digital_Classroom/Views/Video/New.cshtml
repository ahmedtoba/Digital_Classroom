

@using Microsoft.AspNetCore.Http
@model Video

@{
    Layout = "_MainLayout";
}


<form class="form" method="post" enctype="multipart/form-data" asp-controller="Video" asp-action="New">
<div class="shadow container rounded bg-white mt-5" style="width: 70vw;">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <input type="file" id="video" name="content" class="d-none" >
                    <label for="video" class="btn btn-primary mt-3" style="cursor:pointer;">Upload Video</label>
                </div>
            </div>
            <div class="col-md-9">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <a asp-controller="Subject" asp-action="Details" asp-route-id="@ViewBag.CourseId" class="text-decoration-none">
                            <div class="d-flex flex-row align-items-center back"><i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                                <h6>Back to Subject Page</h6>
                            </div>
                        </a>
                        <h6 class="text-right">Adding New Video</h6>
                    </div>
                    <div class="row mt-2 form-group">
                    
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-4">
                            <label asp-for="Title"></label>
                        </div>
                        <div class="col-md-8">
                            <input asp-for="Title" class="form-control"/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row mt-3 justify-content-center align-content-center">
                        <div class="col-md-4">
                            <label asp-for="Description"></label>
                        </div>
                        <div class="col-md-8">
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        </div>
                            <input name="courseId" value="@ViewBag.CourseId" class="form-control" type="hidden"/>
                    </div>
                    
                    <div class="mt-5 text-right"><input type="submit" class="btn btn-success pr-5 pl-5 pt-2 pb-2" value="Add Video"></div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}